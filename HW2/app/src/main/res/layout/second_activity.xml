<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FF0000"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/ColorBlock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:background="@color/black"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="75dp"
        android:id="@+id/GreenBar"
        android:progressTint="#00FF00"
        android:thumbTint="#00FF00"
        app:layout_constraintLeft_toRightOf="@id/ColorBlock"
        app:layout_constraintTop_toTopOf="@id/ColorBlock"
        app:layout_constraintBottom_toBottomOf="@id/ColorBlock"
        />
    <SeekBar
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="75dp"
        android:id="@+id/RedBar"
        android:progressTint="#FF0000"
        android:thumbTint="#FF0000"
        app:layout_constraintLeft_toRightOf="@id/ColorBlock"
        app:layout_constraintTop_toTopOf="@id/ColorBlock"
        app:layout_constraintBottom_toTopOf="@id/GreenBar"
        />
    <SeekBar
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="75dp"
        android:id="@+id/BlueBar"
        android:progressTint="#0000FF"
        android:thumbTint="#0000FF"
        app:layout_constraintLeft_toRightOf="@id/ColorBlock"
        app:layout_constraintTop_toBottomOf="@id/GreenBar"
        app:layout_constraintBottom_toBottomOf="@id/ColorBlock"
        />

    <TextView
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:id="@+id/RedText"
        android:text="Red"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/RedBar"
        app:layout_constraintLeft_toRightOf="@id/RedBar" />
    <TextView
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:id="@+id/GreenText"
        android:text="Green"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/GreenBar"
        app:layout_constraintLeft_toRightOf="@id/GreenBar" />
    <TextView
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:id="@+id/BlueText"
        android:text="Blue"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/BlueBar"
        app:layout_constraintLeft_toRightOf="@id/BlueBar" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ColorView"
        android:text="#000000"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ColorBlock"
        app:layout_constraintLeft_toLeftOf="@id/ColorBlock"
        app:layout_constraintRight_toRightOf="@id/ColorBlock"
        />

</androidx.constraintlayout.widget.ConstraintLayout>